<h2>Добавление нового товара</h2>
<%= form_for :item, url: items_path, html: { multipart: true } do |f| %>

    <p>
        Название<br>
        <%= f.text_field(:title, class: 'form-control') %>
    </p>
    <p>
    В наличии<br>
    <%= f.text_area(:ostatok, class: 'form-control') %>
    </p>
    <p>
        Адрес хранения<br>
        <%= f.text_area(:address, class: 'form-control') %>
    </p>
    <p>
        Базовая цена<br>
        <%= f.text_area(:sellprice, class: 'form-control') %>
    </p>
    <p>
        Закупочная цена<br>
        <%= f.text_area(:buyprice, class: 'form-control') %>
    </p>
    <p> 
        Фото<br>
        <%= f.file_field :picture %>
    </p>
    <p>
        <%= f.submit class: 'btn btn-success' %>
    </p>
<% end %>
