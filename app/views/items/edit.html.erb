<h2>Редактирование товара</h2>
<%= form_for @item, url: item_path(@item), method: :patch, html: { multipart: true } do |f| %>

    <p>
        Название<br>
        <%= f.text_field(:title, class: 'form-control') %>
    </p>
    <p>
        В наличии<br>
        <%= f.text_area(:ostatok, class: 'form-control') %>
    </p>
    <p>
        Адрес хранения<br>
        <%= f.text_area(:address, class: 'form-control') %>
    </p>
    <p>
        Базовая цена<br>
        <%= f.text_area(:sellprice, class: 'form-control') %>
    </p>
    <p>
        Закупочная цена<br>
        <%= f.text_area(:buyprice, class: 'form-control') %>
    </p>
    <p>
        <% if @item.picture.attached? %>
            <strong>Текущее изображение:</strong><br>
            <%= image_tag @item.picture %><br>
        <% end %>
        <%= f.label :picture, 'Выберите новое изображение:' %><br>
        <%= f.file_field :picture %>
    </p>
    <p>
        <%= f.submit class: 'btn btn-success' %>
    </p>
<% end %>
